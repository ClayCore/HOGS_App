{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "jsx": "react",
        "lib": ["es6", "dom", "es5"],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist",
        "skipLibCheck": true,
        "strict": true,
        "target": "es6",
        "typeRoots": ["node_modules/@types"],
        "paths": {
            "#package/styles/*": ["../client/src/website/styles/*"],
            "#package/client/*": ["../client/src/*"],
            "#package/assets/*": ["../assets/*"],
            "#package/server/*": ["./src/*"]
        }
    },
    "include": ["./src/*"],
    "exclude": ["./node_modules/**/*", "./dist/**/*"]
}
