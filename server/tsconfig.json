{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"rootDir": "src",
		"baseUrl": "src",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"strict": true,
		"target": "es6",
		"lib": ["DOM.Iterable", "DOM"],
		"typeRoots": ["node_modules/@types"],
		"module": "commonjs",
		"paths": {
			"~/*": ["src/*"],
			"@typings/*": ["../typings/*"]
		}
	},
	"include": ["src/**/*", "typings/**/*"]
}
