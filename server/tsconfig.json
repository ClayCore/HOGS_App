{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"rootDir": ".",
		"baseUrl": ".",
		"esModuleInterop": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"strict": true,
		"target": "es6",
		"lib": ["DOM.Iterable", "DOM"],
		"typeRoots": ["node_modules/@types"],
		"module": "commonjs",
		"paths": {
			"~/*": ["./*"],
			"@typings/*": ["./typings/*"]
		}
	},
	"include": ["./**/*", "typings/**/*"]
}
