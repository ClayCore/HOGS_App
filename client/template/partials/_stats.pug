mixin playerRow(avatar, name, score, timePlayed)
	.playerBlock 
		img(src=avatar)
		p= name
		p= score
		p= timePlayed

block content
	section#stats
		.column
			header Server statistics
			//- TODO: Graph of player activity over time
			canvas
		.column 
			header Active players
			- var playerStats = [];
			each player in playerStats 
				+playerRow(player.avatar, player.name, player.score, player.timePlayed)
