{
    "name": "hightower-ogs-website",
    "version": "0.1.0",
    "private": true,
    "engines": {
        "node": "^15.0.0",
        "yarn": "^1.12.4"
    },
    "browserslist": [
        "since 2019-12"
    ],
    "lint-staged": {
        "*.{tsx, ts, js, scss}": [
            "prettier --write",
            "git add"
        ]
    },
    "scripts": {
        "install": "yarn install:client && yarn install:server",
        "install:client": "cd client && yarn install",
        "install:server": "cd client && yarn install",
        "build": "yarn build:server && yarn build:client",
        "build:client": "cd client && yarn build",
        "build:server": "cd server && yarn build",
        "start": "concurrently \"yarn start:server\" \"yarn start:client\"",
        "start:server": "cd server && yarn start",
        "start:client": "cd client && yarn start",
        "serve": "cd server && yarn serve",
        "heroku-postbuild": "yarn build:client"
    },
    "devDependencies": {
        "concurrently": "6.0.0"
    }
}